<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <VTI_Pgrid>
            <version>1.0.0</version>
        </VTI_Pgrid>
    </modules>

    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <VTI_Pgrid after="Mage_Adminhtml">VTI_Pgrid_Adminhtml</VTI_Pgrid>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <impgrid>
                    <file>impgrid.xml</file>
                </impgrid>
            </updates>
        </layout>
    </adminhtml>

    <global>

        <models>
            <impgrid>
                <class>VTI_Pgrid_Model</class>
                <resourceModel>impgrid_mysql4</resourceModel>
            </impgrid>
            <impgrid_mysql4>
                <class>VTI_Pgrid_Model_Mysql4</class>
                <entities>
                    <grid_group>
                        <table>impgrid_grid_column_grid</table>
                    </grid_group>
                    <grid_column>
                        <table>impgrid_grid_column</table>
                    </grid_column>
                    <grid_group_column>
                        <table>impgrid_group_column</table>
                    </grid_group_column>
                    <grid_group_attribute>
                        <table>impgrid_group_attribute</table>
                    </grid_group_attribute>
                </entities>
            </impgrid_mysql4>
        </models>

		<resources>
             <impgrid_setup>
                <setup>
                    <module>VTI_Pgrid</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </impgrid_setup>
		    <impgrid_write>
		        <connection><use>core_write</use></connection>
		    </impgrid_write>
		    <impgrid_read>
		        <connection><use>core_read</use></connection>
		    </impgrid_read>
		</resources>

        <blocks>
            <impgrid>
                <class>VTI_Pgrid_Block</class>
            </impgrid>

            <adminhtml>
                <rewrite>
                    <catalog_product>VTI_Pgrid_Block_Adminhtml_Catalog_Product</catalog_product>
                    <catalog_product_grid>VTI_Pgrid_Block_Adminhtml_Catalog_Product_Grid</catalog_product_grid>
                </rewrite>
            </adminhtml>
        </blocks>

        <events>
            <admin_user_save_after>
                <observers>
                    <impgrid_admin_user_save_after>
                        <type>singleton</type>
                        <class>impgrid/observer</class>
                        <method>adminUserSaveAfter</method>
                    </impgrid_admin_user_save_after>
                </observers>
            </admin_user_save_after>
        </events>
        <helpers>
            <impgrid>
                <class>VTI_Pgrid_Helper</class>
            </impgrid>
        </helpers>
    </global>
    <default>
        <impgrid>
           <general>
               <number_of_records>20</number_of_records>
           </general>
            <attr>
                <byadmin>1</byadmin>
            </attr>
            <additional>
                <share_attribute_templates>0</share_attribute_templates>
            </additional>
            <group>
                <sorting>entity_id,name,second_name,type,set_name,sku,price,visibility,status,websites,season,product_type,action</sorting>
            </group>
        </impgrid>
    </default>

</config>
